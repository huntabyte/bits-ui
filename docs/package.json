		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.7",
		"@types/hast": "^3.0.4",
		"@types/jsdom": "^21.1.7",
		"@types/mdast": "^4.0.4",
		"@types/node": "^20.17.6",
		"@types/turndown": "^5.0.5",
		"@types/unist": "^3.0.3",
		"autoprefixer": "^10.4.20",
		"bits-ui": "workspace:*",
		"clsx": "^2.1.0",
		"consola": "^3.4.0",
		"eruda": "^3.4.1",
		"flexsearch": "^0.7.43",
		"jsdom": "^24.1.3",
		"marked": "^14.1.4",
		"mdsx": "^0.0.7",
		"mode-watcher": "^0.4.1",
