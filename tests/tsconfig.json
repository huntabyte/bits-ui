{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["src"]
}
