{
  "name": "bits-ui",
  "version": "0.18.3",
  "license": "MIT",
  "repository": "github:huntabyte/bits-ui",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:content\" \"pnpm:dev:svelte\"",
    "dev:content": "contentlayer dev",
    "dev:svelte": "vite dev",
    "build": "contentlayer build &&  vite build && pnpm run package",
    "build:content": "contentlayer build",
    "build:content-cachebust": "contentlayer build --clearCache",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "pnpm run package",
    "check": "pnpm build:content && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "vitest",
    "release": "changeset publish",
    "changeset": "changeset"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@huntabyte/mdsvex": "0.16.5",
    "@melt-ui/pp": "^0.3.0",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-vercel": "^5.1.0",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/package": "^2.2.7",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/svelte": "^4.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/hast": "^3.0.4",
    "@types/jest-axe": "^3.5.9",
    "@types/mdast": "^4.0.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/unist": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.17",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.2",
    "contentlayer": "^0.3.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.35.1",
    "esm-env": "^1.0.0",
    "hast-util-to-html": "^9.0.0",
    "jest-axe": "^8.0.0",
    "jsdom": "^24.0.0",
    "mode-watcher": "^0.2.0",
    "phosphor-svelte": "^1.4.2",
    "postcss": "^8.4.33",
    "postcss-load-config": "^5.0.2",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "prettier-plugin-tailwindcss": "0.2.7",
    "publint": "^0.2.7",
    "rehype-pretty-code": "^0.13.0",
    "remark-gfm": "^4.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "shiki": "^1.1.1",
    "svelte": "^4.2.9",
    "svelte-check": "^3.6.3",
    "svelte-sequential-preprocessor": "^2.0.1",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.1.20",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "unified": "^11.0.4",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.0.12",
    "vitest": "^1.2.2"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@internationalized/date": "^3.5.1",
    "@melt-ui/svelte": "0.74.2",
    "nanoid": "^5.0.5"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "packageManager": "pnpm@8.6.3"
}
