	"private": true,
	"scripts": {
		"dev": "concurrently \"pnpm:dev:content\" \"pnpm:dev:svelte\"",
		"dev:content": "velite dev --watch",
		"dev:svelte": "vite dev",
		"build": "velite && node ./other/update-velite-output.js && pnpm build:search && vite build",
