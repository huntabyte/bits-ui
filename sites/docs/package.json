		"@tailwindcss/typography": "^0.5.15",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"@types/node": "^20.17.6",
		"@types/unist": "^3.0.3",
		"autoprefixer": "^10.4.20",
		"clsx": "^2.1.0",
		"concurrently": "^8.2.2",
		"eruda": "^3.4.1",
